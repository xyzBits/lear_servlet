<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person" class="com.learn.spring.ioc.bean.Person" depends-on="book,car"/>
    <bean id="car" class="com.learn.spring.ioc.bean.Car" scope="singleton"/>
    <bean id="book" class="com.learn.spring.ioc.bean.Book" scope="prototype"/>

    <bean class="com.learn.spring.ioc.impl.MyPostProcessor"/>

</beans>